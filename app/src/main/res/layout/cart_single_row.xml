<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowImageFrame">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowImageProgressBar"
            android:visibility="gone"/>
    </FrameLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/cartTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rowImageFrame"
        android:layout_toEndOf="@+id/rowImageFrame"
        android:layout_margin="10px" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/priceCart"
        android:layout_below="@+id/cartTitle"
        android:layout_toRightOf="@+id/rowImageFrame"
        android:layout_toEndOf="@+id/rowImageFrame"
        android:layout_margin="10px" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detialsCart"
        android:layout_below="@+id/priceCart"
        android:layout_toRightOf="@+id/rowImageFrame"
        android:layout_toEndOf="@+id/rowImageFrame"
        android:layout_margin="10px" />


</RelativeLayout>
